        // 게임 시작 및 화면 전환
        const switchScreen = (fromId, toId) => {
            const fromScreen = document.getElementById(fromId);
            const toScreen = document.getElementById(toId);
            fromScreen.classList.remove('visible');
            setTimeout(() => {
                fromScreen.style.display = 'none';
                toScreen.style.display = 'flex';
                setTimeout(() => toScreen.classList.add('visible'), 50);
            }, 1000);
        };

        const startGame = () => {
            let studentName = prompt('이름을 입력하세요.');
            let studentId = prompt('학번을 입력하세요.');

            if (studentName && studentId) {
                studentResults.push({
                    name: studentName,
                    studentId: studentId,
                    scores: { '언어지능': 0, '논리수학지능': 0, '공간지능': 0, '신체운동지능': 0, '음악지능': 0, '대인관계지능': 0, '자기성찰지능': 0, '자연친화지능': 0 },
                    dominantIntelligence: null
                });
                if (bgm.paused) {
                    bgm.play();
                }
                switchScreen('start-screen', 'character-select-screen');
            } else {
                alert('이름과 학번을 모두 입력해야 게임을 시작할 수 있습니다.');
            }
        };

        const selectCharacter = (event) => {
            characterCards.forEach(card => card.classList.remove('selected'));
            const card = event.currentTarget;
            card.classList.add('selected');
            selectedCharacter = card.dataset.character;
            selectCharBtn.disabled = false;
        };

        const startQuest = () => {
            if (!selectedCharacter) {
                alert('캐릭터를 선택해주세요!');
                return;
            }
            questIndex = 0;
            Object.keys(scores).forEach(key => scores[key] = 0);
            showQuest();
            switchScreen('character-select-screen', 'quest-screen');
        };

        const showQuest = () => {
            if (questIndex >= totalQuests) {
                showResult();
                return;
            }

            const currentQuest = questData[selectedCharacter][questIndex];
            questTitle.textContent = currentQuest.title;
            questText.textContent = currentQuest.text;
            questStory.textContent = characterData[selectedCharacter].story;
            
            questOptions.innerHTML = '';
            currentQuest.options.forEach(option => {
                const button = document.createElement('button');
                button.className = 'quest-option';
                button.textContent = option.text;
                button.onclick = () => selectOption(option.intelligence);
                questOptions.appendChild(button);
            });

            const progress = Math.round((questIndex / totalQuests) * 100);
            progressBar.style.width = `${progress}%`;
            progressBar.textContent = `${progress}%`;
        };

        const selectOption = (intelligence) => {
            scores[intelligence]++;
            questIndex++;
            showQuest();
        };

        const showResult = () => {
            const sortedScores = Object.entries(scores).sort((a, b) => b[1] - a[1]);
            const dominant = sortedScores[0][0];

            resultContent.innerHTML = `
                <p>당신의 강점 지능은 <span class="star-burst"><strong>${intelligenceInfo[dominant].title}</strong></span>입니다.</p>
                <p><strong>${intelligenceInfo[dominant].emoji}</strong> ${intelligenceInfo[dominant].description}</p>
                <br>
                <h3>모험 결과 상세 보기</h3>
                <ul>
                    ${sortedScores.map(score => `<li><strong>${intelligenceInfo[score[0]].title}</strong>: ${score[1]}점</li>`).join('')}
                </ul>
            `;
            
            const lastStudent = studentResults[studentResults.length - 1];
            if (lastStudent) {
                lastStudent.scores = scores;
                lastStudent.dominantIntelligence = dominant;
            }
            
            switchScreen('quest-screen', 'result-screen');
        };

        const showDashboard = (fromScreenId) => {
            switchScreen(fromScreenId, 'dashboard-screen');
            const dashboardContent = document.getElementById('dashboard-content');
            
            if (studentResults.length === 0) {
                dashboardContent.innerHTML = '<p>아직 참여한 학생이 없습니다.</p>';
                return;
            }

            let tableHTML = '<table><thead><tr><th>학번</th><th>이름</th><th>언어지능</th><th>논리수학지능</th><th>공간지능</th><th>신체운동지능</th><th>음악지능</th><th>대인관계지능</th><th>자기성찰지능</th><th>자연친화지능</th></tr></thead><tbody>';
            studentResults.forEach(student => {
                tableHTML += `<tr><td>${student.studentId}</td><td>${student.name}</td>`;
                tableHTML += `<td>${student.scores['언어지능']}</td>`;
                tableHTML += `<td>${student.scores['논리수학지능']}</td>`;
                tableHTML += `<td>${student.scores['공간지능']}</td>`;
                tableHTML += `<td>${student.scores['신체운동지능']}</td>`;
                tableHTML += `<td>${student.scores['음악지능']}</td>`;
                tableHTML += `<td>${student.scores['대인관계지능']}</td>`;
                tableHTML += `<td>${student.scores['자기성찰지능']}</td>`;
                tableHTML += `<td>${student.scores['자연친화지능']}</td></tr>`;
            });
            tableHTML += '</tbody></table>';
            dashboardContent.innerHTML = tableHTML;
        };

        const restartGame = () => {
            switchScreen('result-screen', 'start-screen');
        };

        const goBackToHome = () => {
            switchScreen('dashboard-screen', 'start-screen');
        };

        startBtn.addEventListener('click', startGame);
        startDashboardBtn.addEventListener('click', () => showDashboard('start-screen'));
        characterCards.forEach(card => card.addEventListener('click', selectCharacter));
        selectCharBtn.addEventListener('click', startQuest);
        restartBtn.addEventListener('click', restartGame);
        dashboardBtn.addEventListener('click', () => showDashboard('result-screen'));
        backToHomeBtn.addEventListener('click', goBackToHome);
    </script>
</body>
</html>
