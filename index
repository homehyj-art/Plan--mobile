        function switchScreen(from, to) {
            const fromScreen = document.getElementById(from);
            const toScreen = document.getElementById(to);
            if (fromScreen) {
                fromScreen.classList.add('fade-out');
                setTimeout(() => {
                    fromScreen.classList.remove('visible', 'fade-out');
                    toScreen.classList.add('visible', 'fade-in');
                }, 1000);
            } else {
                toScreen.classList.add('visible', 'fade-in');
            }
        }

        const startGame = () => {
            switchScreen('start-screen', 'character-select-screen');
            bgm.play();
        };

        const selectCharacter = (event) => {
            characterCards.forEach(card => card.classList.remove('selected'));
            const card = event.currentTarget;
            card.classList.add('selected');
            selectedCharacter = card.dataset.character;
            selectCharBtn.disabled = false;
        };

        const startQuest = () => {
            if (!selectedCharacter) {
                alert('캐릭터를 선택해주세요!');
                return;
            }
            switchScreen('character-select-screen', 'quest-screen');
            questIndex = 0;
            scores = { '언어지능': 0, '논리수학지능': 0, '공간지능': 0, '신체운동지능': 0, '음악지능': 0, '대인관계지능': 0, '자기성찰지능': 0, '자연친화지능': 0 };
            document.getElementById('quest-story').textContent = characterData[selectedCharacter].story;
            showQuest();
        };

        const showQuest = () => {
            if (questIndex >= totalQuests) {
                showResult();
                return;
            }

            const currentQuest = questData[selectedCharacter][questIndex];
            questTitle.textContent = currentQuest.title;
            questText.textContent = currentQuest.text;
            questOptions.innerHTML = '';
            
            // 옵션 순서를 랜덤으로 섞기
            const shuffledOptions = currentQuest.options.sort(() => Math.random() - 0.5);

            shuffledOptions.forEach(option => {
                const button = document.createElement('button');
                button.classList.add('quest-option');
                button.textContent = option.text;
                button.addEventListener('click', () => handleAnswer(option.intelligence));
                questOptions.appendChild(button);
            });
            updateProgressBar();
        };

        const handleAnswer = (intelligence) => {
            scores[intelligence]++;
            questIndex++;
            showQuest();
        };

        const updateProgressBar = () => {
            const progress = (questIndex / totalQuests) * 100;
            progressBar.style.width = `${progress}%`;
            progressBar.textContent = `${Math.round(progress)}%`;
        };

        const showResult = () => {
            switchScreen('quest-screen', 'result-screen');
            bgm.pause();
            bgm.currentTime = 0;
            
            const sortedScores = Object.entries(scores).sort((a, b) => b[1] - a[1]);
            const dominantIntelligence = sortedScores[0][0];
            const secondIntelligence = sortedScores[1][0];

            resultContent.innerHTML = `
                <p>당신의 모험 결과, 가장 빛나는 강점 지능은 바로 <span class="star-burst">${intelligenceInfo[dominantIntelligence].title}</span> 입니다!</p>
                <p>${intelligenceInfo[dominantIntelligence].description}</p>
                <br>
                <p>그다음으로 강한 지능은 <span class="star-burst">${intelligenceInfo[secondIntelligence].title}</span>입니다. 두 지능을 함께 활용하여 더 큰 잠재력을 발휘해보세요!</p>
            `;
            
            // 임시 학생 ID와 이름 생성
            const studentId = 'S' + Math.floor(Math.random() * 1000);
            const studentName = '학생' + Math.floor(Math.random() * 100);
            studentResults.push({ studentId, name: studentName, scores });
        };

        const showDashboard = (fromScreen) => {
            switchScreen(fromScreen, 'dashboard-screen');
            const dashboardContent = document.getElementById('dashboard-content');
            
            if (studentResults.length === 0) {
                dashboardContent.innerHTML = '<p>아직 참여한 학생이 없습니다.</p>';
                return;
            }

            let tableHTML = '<table><thead><tr><th>학번</th><th>이름</th><th>1순위 강점지능</th></tr></thead><tbody>';
            studentResults.forEach(student => {
                const sortedScores = Object.entries(student.scores).sort((a, b) => b[1] - a[1]);
                const dominant = sortedScores[0][0];
                tableHTML += `<tr><td>${student.studentId}</td><td>${student.name}</td><td>${intelligenceInfo[dominant].title}</td></tr>`;
            });
            tableHTML += '</tbody></table>';
            dashboardContent.innerHTML = tableHTML;
        };

        const restartGame = () => {
            switchScreen('result-screen', 'start-screen');
        };

        const goBackToHome = () => {
            switchScreen('dashboard-screen', 'start-screen');
        };

        startBtn.addEventListener('click', startGame);
        startDashboardBtn.addEventListener('click', () => showDashboard('start-screen'));
        characterCards.forEach(card => card.addEventListener('click', selectCharacter));
        selectCharBtn.addEventListener('click', startQuest);
        restartBtn.addEventListener('click', restartGame);
        dashboardBtn.addEventListener('click', () => showDashboard('result-screen'));
        backToHomeBtn.addEventListener('click', goBackToHome);
    </script>
</body>
</html>
